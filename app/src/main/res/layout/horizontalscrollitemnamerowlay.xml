<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:id="@+id/horizontalitemNameLinearLayout"
    android:focusable="true"
    android:background="@drawable/rippleeffect"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/HorizontalScrollItemNameImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="itemName"
        android:src="@drawable/ic_baseline_search_24" />

    <TextView
        android:id="@+id/HorizontalScrollItemNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:text="itemName"
        android:textColor="#6b6b6b" />

</LinearLayout>