<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/checkoutTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_background_drawable_highlighted"
        android:gravity="center"
        android:text="1"
        android:textColor="#fff" />

    <View
        android:id="@+id/checkoutview1"
        android:layout_width="100dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/red" />

    <TextView
        android:id="@+id/checkoutTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/circle_background_drawable_highlighted"
        android:gravity="center"
        android:text="2"
        android:textColor="#fff"

        />

    <View
        android:id="@+id/checkoutview2"
        android:layout_width="100dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/red" />

    <TextView
        android:id="@+id/checkoutTextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_background_drawable"
        android:gravity="center"
        android:text="3"
        android:textColor="#fff"

        />


</LinearLayout>