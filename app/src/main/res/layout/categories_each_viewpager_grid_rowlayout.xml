<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp"
    android:backgroundTint="#ffffff"
    app:cardCornerRadius="5dp"
    app:cardElevation="6dp"
    app:contentPadding="4dp">

   <androidx.coordinatorlayout.widget.CoordinatorLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       >

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="16dp"
           android:orientation="vertical">

           <ImageView
               android:id="@+id/ItemImageView"
               android:layout_width="match_parent"
               android:layout_height="150dp"
               android:layout_margin="4dp"
               android:maxHeight="300dp"
               android:minHeight="300dp"
               android:scaleType="centerInside"
               android:src="@drawable/image" />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="4dp"
               android:orientation="vertical">

               <TextView
                   android:id="@+id/ItemNameTextView"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_margin="4dp"
                   android:ellipsize="end"
                   android:maxLines="3"
                   android:text="dog"
                   android:textColor="#000"
                   android:textStyle="bold"
                   android:textSize="14sp" />

               <TextView
                   android:id="@+id/ItemDescriptionTextView"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="4dp"
                   android:layout_marginRight="4dp"
                   android:text="dog"
                   android:textColor="#6b6b6b"
                   android:textSize="12sp"
                   android:visibility="gone" />

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_margin="4dp"
                   android:layout_marginTop="8dp"
                   android:orientation="horizontal"
                   android:visibility="gone"
                  >

                   <TextView
                       android:id="@+id/GrossWeightTextView"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="22222"
                       android:textColor="#6b6b6b"
                       android:textSize="12sp" />

                   <View
                       android:layout_width="1dp"
                       android:layout_height="match_parent"
                       android:layout_marginLeft="8dp"
                       android:layout_marginRight="8dp"
                       android:background="#6b6b6b" />

                   <TextView
                       android:id="@+id/NetWeightTextView"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"

                       android:text="22222"
                       android:textColor="#6b6b6b"
                       android:textSize="12sp" />
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"

                   android:orientation="horizontal">

                   <TextView

                       android:id="@+id/originalPriceTextView"
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"

                       android:gravity="center_vertical"
                       android:text="MRP: $ 25"
                       android:textColor="#c62828"
                       android:textSize="14sp"
                       android:textStyle="bold" />

                   <androidx.coordinatorlayout.widget.CoordinatorLayout
                       android:layout_width="wrap_content"
                       android:visibility="gone"
                       android:layout_height="wrap_content">

                       <LinearLayout
                           android:id="@+id/addorremoveitemslinearlayout"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginStart="32dp"
                           android:layout_marginLeft="32dp"
                           android:layout_marginEnd="8dp"
                           android:layout_marginRight="8dp"
                           android:orientation="horizontal"

                           app:layout_constraintBottom_toBottomOf="parent"
                           app:layout_constraintEnd_toEndOf="parent"
                           app:layout_constraintHorizontal_bias="1.0"
                           app:layout_constraintStart_toEndOf="@+id/cartitemPrice"
                           app:layout_constraintTop_toTopOf="parent">

                           <ImageButton
                               android:id="@+id/removeitemsImageButton"
                               android:layout_width="wrap_content"
                               android:layout_height="match_parent"
                               android:background="#fbe9e7"
                               android:padding="4dp"
                               android:src="@drawable/ic_baseline_remove_24"
                               android:textColor="@color/red"
                               android:textStyle="bold" />

                           <TextView
                               android:id="@+id/cartitemquantitiytextview"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginLeft="4dp"
                               android:layout_marginRight="4dp"
                               android:padding="4dp"
                               android:text="2"
                               android:textColor="#6b6b6b"
                               android:textStyle="bold" />

                           <ImageButton
                               android:id="@+id/additemsImageButton"
                               android:layout_width="wrap_content"
                               android:layout_height="match_parent"
                               android:background="#fbe9e7"
                               android:padding="4dp"

                               android:src="@drawable/ic_baseline_add_24"
                               android:textColor="@color/red"
                               android:textStyle="bold" />

                       </LinearLayout>

                       <Button
                           android:id="@+id/addToCartButton"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:backgroundTint="#c62828"
                           android:text="Add to CArt"
                           android:textSize="12sp"
                           android:visibility="gone" />
                   </androidx.coordinatorlayout.widget.CoordinatorLayout>

               </LinearLayout>
           </LinearLayout>

           <View
               android:layout_width="match_parent"
               android:layout_height="0.5dp"
               android:background="#bdbdbd" />

           <TextView
               android:id="@+id/timeTextview"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:padding="8dp"
               android:text="Tomorrow 6AM-8AM"
               android:textColor="#6b6b6b"
               android:textSize="14sp" />

       </LinearLayout>
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
          android:layout_margin="4dp"
           android:src="@drawable/ic_baseline_favorite_border_24"
           android:id="@+id/favouritesImageView"/>
   </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.cardview.widget.CardView>