<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp"
   android:layout_margin="4dp"
    app:contentPadding="4dp"
    android:backgroundTint="#ffffff"
    app:cardCornerRadius="5dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ItemImageView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="4dp"
            android:minHeight="300dp"
            android:scaleType="centerInside"
            android:maxHeight="300dp"
            android:src="@drawable/image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ItemNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="dog"
                android:textColor="#6b6b6b"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ItemDescriptionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:text="dog"
                android:visibility="gone"
                android:textColor="#6b6b6b"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/GrossWeightTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22222"
                    android:textColor="#6b6b6b"
                    android:textSize="12sp" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="#6b6b6b" />
                <TextView
                    android:id="@+id/NetWeightTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="22222"
                    android:textColor="#6b6b6b"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView

                    android:id="@+id/originalPriceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="MRP: $ 25"
                    android:textColor="#c62828"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <androidx.coordinatorlayout.widget.CoordinatorLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/addorremoveitemslinearlayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginLeft="32dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toEndOf="@+id/cartitemPrice"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageButton
                            android:id="@+id/removeitemsImageButton"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="#fbe9e7"
                            android:padding="4dp"
                            android:src="@drawable/ic_baseline_remove_24"
                            android:textColor="@color/red"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/cartitemquantitiytextview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:padding="4dp"
                            android:text="2"
                            android:textColor="#6b6b6b"
                            android:textStyle="bold" />

                        <ImageButton
                            android:id="@+id/additemsImageButton"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="#fbe9e7"
                            android:padding="4dp"
                            android:src="@drawable/ic_baseline_add_24"
                            android:textColor="@color/red"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/addToCartButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#c62828"
                        android:visibility="gone"
                        android:text="Add to CArt"
                        android:textSize="12sp" />
                </androidx.coordinatorlayout.widget.CoordinatorLayout>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#bdbdbd" />

        <TextView
            android:id="@+id/timeTextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="Tomorrow 6AM-8AM"
            android:textColor="#6b6b6b"
            android:textSize="18sp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>