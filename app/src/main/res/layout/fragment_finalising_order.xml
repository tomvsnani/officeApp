<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FinalisingOrderFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/finalsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="?actionBarSize"
                android:layout_marginRight="?actionBarSize"
                android:gravity="center"
                android:text="Your Orders"
                android:textColor="#212121"
                android:textSize="24sp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/order_processing_steps_layout"
       android:id="@+id/addressstepsinclude"/>

    <LinearLayout
        android:layout_width="match_parent"

        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/step1orderlinearlayout">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Other Addresses "
            android:textColor="#000"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chooseaddressrecyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/hello_blank_fragment" />

        <Button
            android:id="@+id/add_address_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Add New Address"
            android:textColor="#000" />

        <Button
            android:id="@+id/deliveroThisAddressButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/red"
            android:text="Deliver to Current address"
            android:textColor="#fff" />
    </LinearLayout>

<include layout="@layout/new_address_layout"
    android:visibility="gone"
    android:id="@+id/newaddressinclude"/>
</LinearLayout>